<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/droidimageid1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toLeftOf="@id/droidimageid2"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/start1" />

    <Button
        android:id="@+id/slotbutton1"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/droidimageid1"
        android:layout_alignLeft="@id/droidimageid1"
        android:layout_marginTop="10dp"
        android:text="●" />


    <ImageView
        android:id="@+id/droidimageid2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/start1" />

    <Button
        android:id="@+id/slotbutton2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/droidimageid2"
        android:layout_alignLeft="@id/droidimageid2"
        android:layout_marginTop="10dp"
        android:text="●" />

    <ImageView
        android:id="@+id/droidimageid3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/droidimageid2"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/start1" />

    <Button
        android:id="@+id/slotbutton3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/droidimageid3"
        android:layout_alignLeft="@id/droidimageid3"
        android:layout_marginTop="10dp"
        android:text="●" />

    <Button
        android:id="@+id/retrybutton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/slotbutton2"
        android:layout_marginTop="20dp"
        android:text="もう一回！" />


</RelativeLayout>